package com.zensar.firstspringbootapp.controllers;

import java.util.ArrayList;
import java.util.List;

import org.springframework.web.bind.annotation.RestController;

import com.zensar.firstspringbootapp.entity.Product;

@RestController
public class ProductController {
	
	// http://localhost:8080/products/
	
	public List<Product> getAllProducts(){
		
		List<Product> products=new ArrayList<>();
		
		products.add(new Product(1,"IPad",70000));
		products.add(new Product(2,"IPhone",60000));
		products.add(new Product(3,"Mac",80000));
		
		return null;
	}
	
	

}
